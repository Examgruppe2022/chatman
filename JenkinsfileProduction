pipeline {
    agent any
    stages {
        stage('reset containers') {
            steps{
                script{
                    try{
                        sh "docker-compose --env-file ./config/Prod.env down"
                    }
                    finally {}
                }
            }
        }
        stage('Production deployment') {
        //for some reason it tries to start multiple mongodb, however the server can only support one such service, so it crashes
            steps {
                sh"docker-compose --env-file ./config/Prod.env pull"
                sh"docker-compose --env-file ./config/Prod.env up -d"
            }
        }
    }
}